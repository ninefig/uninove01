#include<stdio.h>
#include<stdlib.h>
main(){
     
int opcao, alcool=0, gasolina=0, diesel=0;
//Armazenar valores;
        while(opcao!=4){
        scanf("%d",&opcao);
//Executar a opção escolhida;
        if (opcao==1)
            alcool++;
        else if (opcao==2)
            gasolina++;
        else if (opcao==3)
            diesel++;
        else if (opcao==4){
//Encerrar o programa;
            printf("MUITO OBRIGADO\n");
            printf("Alcool: %d\n", alcool);
            printf("Gasolina: %d\n", gasolina);
            printf("Diesel: %d\n", diesel);
                        }
                        }
return 0;
}
